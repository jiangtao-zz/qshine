<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="qshine" type="qshine.Configuration.EnvironmentSection, qshine"/>
  </configSections>
  
  <qshine>
    <environments>
      <!--qshine common config -->
      <environment name="main" path="config"/>
      <!--sqlserver database plug-in config -->
      <environment name="sqlserver" path="config/component/database/sqlserver" bin="bin"/>
    </environments>
  </qshine>

  <!--sql server test database connection-->
  <connectionStrings>
    <add name="testdb" providerName="System.Data.SqlClient" connectionString="Data Source=(LocalDb)\sampledbinstance;Initial Catalog=sampledb;Integrated Security=True" />
    <add name="testdb1" providerName="System.Data.SqlClient" connectionString="Data Source=np:\\.\pipe\LOCALDB#56D9D744\tsql\query;Initial Catalog=sampledb;Integrated Security=True" />
  </connectionStrings>

  <!--Sql server data provider always loaded by Windows from machine.config-->

  <!--dev debug-->
  <system.diagnostics>
    <sources>
      <source name="dev" switchName="sourceSwitch" switchType="System.Diagnostics.SourceSwitch">
        <listeners>
          <add name="console"/>
          <remove name="Default"/>
        </listeners>
      </source>

      <source name="General" switchName="sourceSwitch" switchType="System.Diagnostics.SourceSwitch">
        <listeners>
          <add name="console"/>
          <remove name="Default"/>
        </listeners>
      </source>
    </sources>
    <switches>
      <add name="sourceSwitch" value="All"/>
    </switches>
    <sharedListeners>
      <add name="console" type="System.Diagnostics.ConsoleTraceListener">
      </add>
    </sharedListeners>

  </system.diagnostics>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1"/>
  </startup>
</configuration>

