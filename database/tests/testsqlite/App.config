<?xml version="1.0" encoding="utf-8"?>
<!--Configure for Sqlite -->
<configuration>
  <configSections>
    <section name="qshine" type="qshine.Configuration.EnvironmentSection, qshine" />
  </configSections>
  <qshine>
    <!--qshine configuration setting folder path. ./Config is the default folder.
		the framewrok will load all configuration files from this folder.
		-->
    <components>
      <component name="sqlSyntax" interface="qshine.database.ISqlDialectProvider" type="qshine.database.sqlite.SqlDialectProvider, qshine.database.sqlite"/>
    </components>

    <environments>
      <environment name="sqlite" path="config/sqlite" bin="bin,bin/net45"/>
    </environments>

  </qshine>

  <connectionStrings>
    <!--Install test Sqlite database-->
    <add name="testdb" providerName="System.Data.SQLite" connectionString="Data Source=testsqlite.db" />
  </connectionStrings>

	<system.data>
		<DbProviderFactories>
			<remove invariant="System.Data.SQLite.EF6" />
			<add name="SQLite Data Provider (Entity Framework 6)" invariant="System.Data.SQLite.EF6" description=".NET Framework Data Provider for SQLite (Entity Framework 6)" type="System.Data.SQLite.EF6.SQLiteProviderFactory, System.Data.SQLite.EF6" />
			<remove invariant="System.Data.SQLite" />
			<add name="SQLite Data Provider" invariant="System.Data.SQLite" description=".NET Framework Data Provider for SQLite" type="System.Data.SQLite.SQLiteFactory, System.Data.SQLite" />
		</DbProviderFactories>
	</system.data>	

</configuration>
