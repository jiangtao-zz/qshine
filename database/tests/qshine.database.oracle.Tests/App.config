<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="qshine" type="qshine.Configuration.EnvironmentSection, qshine"/>

    <!--Oracle specific config for data source-->
    <section name="oracle.manageddataaccess.client"
      type="OracleInternal.Common.ODPMSectionHandler, Oracle.ManagedDataAccess, Version=4.122.18.3, Culture=neutral, PublicKeyToken=89b483f429c47342"/>

  </configSections>
  
  <qshine>
    <environments>
      <!--qshine common config -->
      <environment name="main" path="config"/>
      <!--oracle database plug-in config -->
      <environment name="oracle" path="config/component/database/oracle" bin="bin"/>
    </environments>
  </qshine>

  <!-- test database connection-->
  <connectionStrings>
    <add name="testdb" providerName="Oracle.ManagedDataAccess.Client" connectionString="user id=sampledb;password=royal1;data source=sampledb" />
  </connectionStrings>
  
  <!--Oracle data source-->
  <oracle.manageddataaccess.client>
    <version number="*">
      <dataSources>
        <dataSource alias="sampledb" descriptor="(DESCRIPTION=(ADDRESS=(PROTOCOL=tcp)(HOST=localhost)(PORT=1521))(CONNECT_DATA=(SERVICE_NAME=XE)))"/>
      </dataSources>
    </version>
  </oracle.manageddataaccess.client>

  <!--Oracle data provider factory -->
  <system.data>
    <DbProviderFactories>
      <!--Oracle provider-->
      <remove invariant="Oracle.ManagedDataAccess.Client"/>
      <add name="ODP.NET, Managed Driver" 
           invariant="Oracle.ManagedDataAccess.Client" 
           description="Oracle Data Provider for .NET, Managed Driver" type="Oracle.ManagedDataAccess.Client.OracleClientFactory, Oracle.ManagedDataAccess, Version=4.122.18.3, Culture=neutral, PublicKeyToken=89b483f429c47342"/>

    </DbProviderFactories>
  </system.data>

  <!--mapping to specific Oracle provider-->
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <publisherPolicy apply="no"/>
        <assemblyIdentity name="Oracle.ManagedDataAccess" publicKeyToken="89b483f429c47342" culture="neutral"/>
        <bindingRedirect oldVersion="4.122.0.0 - 4.65535.65535.65535" newVersion="4.122.18.3"/>
      </dependentAssembly>
    </assemblyBinding>
  </runtime>

  <!--dev debug-->
  <system.diagnostics>
    <sources>
      <source name="dev" switchName="sourceSwitch" switchType="System.Diagnostics.SourceSwitch">
        <listeners>
          <add name="console"/>
          <remove name="Default"/>
        </listeners>
      </source>

      <source name="General" switchName="sourceSwitch" switchType="System.Diagnostics.SourceSwitch">
        <listeners>
          <add name="console"/>
          <remove name="Default"/>
        </listeners>
      </source>
    </sources>
    <switches>
      <add name="sourceSwitch" value="All"/>
    </switches>
    <sharedListeners>
      <add name="console" type="System.Diagnostics.ConsoleTraceListener">
      </add>
    </sharedListeners>

  </system.diagnostics>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1"/>
  </startup>
</configuration>

